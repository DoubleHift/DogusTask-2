@model BatuhanDemiralMVC1.ViewModels.GirisViewModel
@{
    ViewData["Title"] = "Giriş Yap";
}

<div class="row">
    <div class="col-md-6 mx-auto">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0">Giriş Yap</h4>
            </div>
            <div class="card-body">
                <form asp-action="Giris" method="post">
                    <input type="hidden" name="returnUrl" value="@ViewBag.ReturnUrl" />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    
                    <div class="mb-3">
                        <label asp-for="KullaniciAdi" class="form-label">Kullanıcı Adı</label>
                        <input asp-for="KullaniciAdi" class="form-control" />
                        <span asp-validation-for="KullaniciAdi" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="Sifre" class="form-label">Şifre</label>
                        <input asp-for="Sifre" class="form-control" />
                        <span asp-validation-for="Sifre" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3 form-check">
                        <input asp-for="BeniHatirla" class="form-check-input" />
                        <label asp-for="BeniHatirla" class="form-check-label">Beni Hatırla</label>
                    </div>
                    
                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary">Giriş Yap</button>
                    </div>
                    
                    <div class="mt-3 text-center">
                        <p>
                            Hesabınız yok mu? <a asp-controller="Hesap" asp-action="Kayit">Kayıt olun</a>
                        </p>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
} 